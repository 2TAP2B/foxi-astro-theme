---
// Layout
import Layout from '../layouts/Layout.astro'

// Sections
import FeatureCategory from '../components/blocks/features/FeatureSticky.astro'

// JSON data
import featuresData from '../data/sections/featuresData.json'

// Extract unique categories
const categories = [...new Set(featuresData.map((feature) => feature.category))]
---

<Layout>
	{
		categories.map((category) => (
			<FeatureCategory
				title={category}
				text={`Features related to ${category}`}
				data={featuresData}
			/>
		))
	}
</Layout>
