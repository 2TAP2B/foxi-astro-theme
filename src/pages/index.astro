---
import Layout from '../layouts/Layout.astro'

// Page sections
import FeaturesSimple from '../components/blocks/features/FeaturesSimple.astro'
import SocialProof from '../components/blocks/stacks/ImageStack.astro'
import PricingTables from '../components/blocks/stacks/PricingTableStack.astro'

//Images
import airtable from '../assets/logos/airtable-logo.svg'
import asana from '../assets/logos/asana-logo.svg'
import basecamp from '../assets/logos/basecamp-logo.svg'
import evernote from '../assets/logos/evernote-logo.svg'
import notion from '../assets/logos/notion-logo.svg'
import slack from '../assets/logos/slack-logo.svg'

const socialProofImages = [
	{ image: airtable.src, alt: 'airtable logo' },
	{ image: asana.src, alt: 'asana logo' },
	{ image: basecamp.src, alt: 'basecamp logo' },
	{ image: evernote.src, alt: 'evernote logo' },
	{ image: notion.src, alt: 'notion logo' },
	{ image: slack.src, alt: 'slack logo' }
]

const pricingTablesData = [
	{
		header: {
			title: 'Basic',
			subtitle: 'Ideal for individual developers.',
			currency: '$',
			price: '15',
			perTime: 'month',
			buttonName: 'Try for free',
			buttonLink: '/'
		},
		body: {
			listItems: [
				{ listItem: 'Join forces with fellow architects' },
				{ listItem: 'Present your projects with flair and captivate your audience.' },
				{ listItem: 'Immerse yourself in the dynamic realm of architecture.' }
			]
		},
		footer: { buttonName: 'See all features', buttonLink: '/' },
		type: 'basic'
	},
	{
		header: {
			title: 'Team',
			subtitle: 'Ideal for small teams',
			currency: '$',
			price: '25',
			perTime: 'month',
			buttonName: 'Try for free',
			buttonLink: '/'
		},
		body: {
			listItems: [
				{ listItem: 'Join forces with fellow architects' },
				{ listItem: 'Present your projects with flair and captivate your audience.' },
				{ listItem: 'Immerse yourself in the dynamic realm of architecture.' },
				{ listItem: 'Unlock endless inspiration' }
			]
		},
		footer: { buttonName: 'See all features', buttonLink: '/' },
		type: 'featured'
	}
]
---

<Layout title="Welcome to Astro.">
	<PricingTables data={pricingTablesData} />
	<FeaturesSimple />
	<SocialProof images={socialProofImages} />
</Layout>
