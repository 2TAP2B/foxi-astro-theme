---
// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'

const { id, classes } = Astro.props
---

<Section {...id ? { id } : {}} classes={classes} stickyCol>
	<Row>
		<Col span="3">
			<div class="sticky-sidebar">
				<slot name="sidebar" />
			</div>
		</Col>
		<Col span="9">
			<slot />
		</Col>
	</Row>
</Section>

<style>
	.sticky-sidebar {
		@apply lg:sticky lg:top-32;
	}
</style>
