---
import { Icon } from 'astro-icon/components'

// Layout elements
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'

// UI elements
import Heading from '../../ui/Heading.astro'
import ChipNotification from '../../ui/ChipNotification.astro'
import Highlight from '../../ui/Highlight.astro'
import Button from '../../ui/Button.astro'

// Hero content
import bg from '../../../assets/bg-01.png'
---

<Section>
	<Row>
		<Col size="2" />
		<Col size="8" align="center" classes="space-y-6">
			<ChipNotification>
				<Button size="sm" style="primary" type="link" link="/"> v.3.1.3 </Button>
				<Fragment> Some text here <a href="/">Hi</a> </Fragment>
			</ChipNotification>

			<Heading size="7xl" mobileSize="5xl">
				Crafting <Highlight type="4" colorFrom="#ef4444" colorTo="#6366f1">Handmade</Highlight> Websites
				that Drive Results.
			</Heading>
			<Col size="2" />
		</Col>
	</Row>
</Section>
