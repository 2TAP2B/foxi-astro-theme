---
// Layout Components
import Section from '../../../components/ui/Section.astro'
import Row from '../../../components/ui/Row.astro'
import Col from '../../../components/ui/Col.astro'

// UI Components
import Post from '../../../components/ui/cards/BlogCard.astro'
import TagNavigation from '../../../components/ui/blog/TagNavigation.astro'

const { data: allPosts } = Astro.props
---

<Section>
	<Row>
		<Col span="12">
			<TagNavigation />
		</Col>
		{
			allPosts.map((post: any) => (
				<Col span="4">
					<Post
						link={'/blog/' + post.slug}
						title={post.data.title}
						subtitle={`By ${post.data.author} on ${post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}`}
						image={post.data.image}
						tags={post.data.tags}
					>
						{post.data.description}
					</Post>
				</Col>
			))
		}
	</Row>
</Section>
