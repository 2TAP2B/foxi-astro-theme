---
import { Icon } from 'astro-icon/components'
import Button from './Button.astro'

type Props = {
	elevated?: boolean
	extraClasses?: string
}

const { elevated, extraClasses } = Astro.props
---

<div class:list={['chip', { ['chip--elevated']: elevated }, { [`${extraClasses}`]: extraClasses }]}>
	<slot />
</div>

<style>
	.chip {
		@apply inline-flex items-center rounded border border-neutral-200 bg-white/50 px-0.5 py-0.5 text-neutral-500 dark:border-neutral-800 dark:bg-neutral-900/50 dark:text-neutral-300;
	}
	.chip--elevated {
		@apply shadow-sm shadow-slate-700/10;
	}
</style>
