---
type Props = {
	elevated?: boolean
	classes?: string
}

const { elevated, classes } = Astro.props
---

<div class:list={['chip', { ['chip--elevated']: elevated }, { [`${classes}`]: classes }]}>
	<slot name="button" />
	<span class="chip--body">
		<slot />
	</span>
</div>

<style>
	.chip {
		@apply inline-flex items-center rounded border border-neutral-200 bg-white/50 px-0.5 py-0.5 dark:border-neutral-800 dark:bg-neutral-900/50 [&_p]:m-0;
	}
	.chip--elevated {
		@apply shadow-sm shadow-slate-700/10;
	}
	.chip--body {
		@apply inline-flex items-center px-4;
	}
</style>
