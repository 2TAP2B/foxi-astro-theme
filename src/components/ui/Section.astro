---
interface Props {
	layout?: string
	id?: string
	mode?: string
}

const { layout = '', id = '', mode = 'light' } = Astro.props
const classes =
	(layout.includes('fullwidth') ? 'section--fullwidth ' : '') + (mode === 'dark' ? 'dark' : '')
---

<section id={id} class={classes}>
	<div class="container">
		<slot />
	</div>
</section>

<style>
	section {
		@apply py-24 dark:bg-neutral-900;
	}
	.container {
		@apply mx-auto px-6 [.section--fullwidth_&]:max-w-full;
	}
</style>
