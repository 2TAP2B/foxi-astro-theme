---
interface Props {
	type?: string
	extraClasses?: string
}

const { type = '', extraClasses = '' } = Astro.props
---

<div class={`row ${type} ${extraClasses}`}>
	<slot />
</div>

<style>
	.row {
		@apply grid grid-cols-4 gap-6 md:grid-cols-8 lg:grid-cols-12 [&.flex]:flex;
	}
	.flex {
		@apply flex-wrap items-center justify-center;
	}
</style>
