---
import { callSafely } from 'astro:actions'

type Props = {
	level: string
	size: string
	mobileSize: string
	align: string
}

const { level = '1', size = '2xl', mobileSize = '3xl', align = 'left' } = Astro.props
const className = `text-${mobileSize} lg:text-${size} text-${align}`
---

{
	level === '1' ? (
		<h1 class={className}>
			<slot />
		</h1>
	) : level === '2' ? (
		<h2 class={className}>
			<slot />
		</h2>
	) : level === '3' ? (
		<h3 class={className}>
			<slot />
		</h3>
	) : level === '4' ? (
		<h4 class={className}>
			<slot />
		</h4>
	) : level === '5' ? (
		<h5 class={className}>
			<slot />
		</h5>
	) : (
		<h6 class={className}>
			<slot />
		</h6>
	)
}
