---
import { callSafely } from 'astro:actions'

type Props = {
	level?: string
	size?: string
	mobileSize?: string
	align?: string
	extraClasses?: string
}

const {
	level = '1',
	size = 'auto',
	mobileSize = size,
	align = 'auto',
	extraClasses = ''
} = Astro.props
const classes = `text-${mobileSize} lg:text-${size} text-${align} ${extraClasses}`
---

{
	level === '1' ? (
		<h1 class={classes}>
			<slot />
		</h1>
	) : level === '2' ? (
		<h2 class={classes}>
			<slot />
		</h2>
	) : level === '3' ? (
		<h3 class={classes}>
			<slot />
		</h3>
	) : level === '4' ? (
		<h4 class={classes}>
			<slot />
		</h4>
	) : level === '5' ? (
		<h5 class={classes}>
			<slot />
		</h5>
	) : (
		<h6 class={classes}>
			<slot />
		</h6>
	)
}
